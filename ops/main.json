{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Test Lambda@Edge",
  "Parameters": {
    "EdgeLambdaName": {
      "Type": "String"
    },
    "AssetBucketDomain": {
      "Type": "String"
    },
    "PublicDomain": {
      "Type": "String"
    },
    "LambdaBucket": {
      "Type": "String"
    },
    "LambdaKey": {
      "Type": "String"
    }
  },
  "Mappings": {
    "Variables": {
      "CloudFrontDistribution": {
        "HostedZoneId": "Z2FDTNDATAQYW2"
      }
    }
  },
  "Resources": {
    "CloudFrontDistribution": {
      "Type": "AWS::CloudFront::Distribution",
      "Properties": {
        "DistributionConfig": {
          "Aliases": [{"Ref": "PublicDomain"}],
          "DefaultCacheBehavior": {
            "ForwardedValues": {
              "Cookies": {
                "Forward": "all"
              },
              "QueryString": true
            },
            "AllowedMethods": ["DELETE", "GET", "HEAD", "OPTIONS", "PATCH", "POST", "PUT"],
            "Compress": true,
            "DefaultTTL": 0,
            "MaxTTL": 0,
            "MinTTL": 0,
            "TargetOriginId": "test-lambda-edge-assets",
            "ViewerProtocolPolicy": "https-only"
          },
          "Enabled": true,
          "Logging": {
            "Bucket": {"Ref": "AssetBucketDomain"},
            "IncludeCookies": true,
            "Prefix": "cloudfront-log"
          },
          "HttpVersion": "http2",
          "Origins": [
            {
              "DomainName": {"Ref": "AssetBucketDomain"},
              "Id": "test-lambda-edge-assets",
              "S3OriginConfig": {}
            }
          ],
          "PriceClass": "PriceClass_100",
          "ViewerCertificate": {
            "AcmCertificateArn": "arn:aws:acm:us-east-1:650892143834:certificate/00cb96a1-2a06-4216-a30d-e810f2a6e6a8",
            "MinimumProtocolVersion": "TLSv1",
            "SslSupportMethod": "sni-only"
          }
        }
      }
    },
    "EdgeLambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": {"Ref": "EdgeLambdaName"},
        "Description": "CloudFront Lambda@Edge",
        "Handler": "index.handler",
        "Role": {"Fn::GetAtt": ["EdgeLambdaFunctionRole", "Arn"]},
        "Code": {
          "S3Bucket": {
            "Ref": "LambdaBucket"
          },
          "S3Key": {
            "Ref": "LambdaKey"
          }
        },
        "Runtime": "nodejs6.10",
        "Timeout": "3"
      }
    },
    "EdgeLambdaFunctionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com",
                  "edgelambda.amazonaws.com"
                ]
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyName": "root",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "iam:CreateServiceLinkedRole"
                  ],
                  "Resource": "*"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "cloudfront:UpdateDistribution",
                    "cloudfront:CreateDistribution"
                  ],
                  "Resource": {"Fn::Sub": "arn:aws:cloudfront::${AWS::AccountId}:distribution/${CloudFrontDistribution}"}
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogGroup",
                    "logs:CreateLogStream",
                    "logs:DescribeLogStreams",
                    "logs:PutLogEvents"
                  ],
                  "Resource": {
                    "Fn::Sub": "arn:aws:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/*"
                  }
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "cloudwatch:*"
                  ],
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "EdgeLambdaVersion": {
      "Type": "AWS::Lambda::Version",
      "Properties": {
        "FunctionName": {"Fn::GetAtt": ["EdgeLambdaFunction", "Arn"]}
      }
    },
    "EdgeLambdaPermission1": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "Principal": "edgelambda.amazonaws.com",
        "Action": "lambda:InvokeFunction",
        "FunctionName": {"Ref": "EdgeLambdaVersion"},
        "SourceArn": {"Fn::Sub": "arn:aws:cloudfront::${AWS::AccountId}:distribution/${CloudFrontDistribution}"}
      }
    },
    "EdgeLambdaPermission2": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "Principal": "replicator.lambda.amazonaws.com",
        "Action": "lambda:GetFunction",
        "FunctionName": {"Ref": "EdgeLambdaVersion"}
      }
    },
    "VersionedEdgeLambdaLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": {"Fn::Sub": "/aws/lambda/us-east-1.${EdgeLambdaFunction}"},
        "RetentionInDays": 14
      }
    },
    "EdgeLambdaLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": {"Fn::Sub": "/aws/lambda/${EdgeLambdaFunction}"},
        "RetentionInDays": 14
      }
    }
  },
  "Outputs": {
    "CloudFrontDistributionId": {
      "Description": "CloudFront Distribution ID",
      "Value": {"Ref": "CloudFrontDistribution"}
    },
    "VersionedEdgeLambdaArn": {
      "Description": "ARN of Versioned Edge Lambda",
      "Value": {"Ref": "EdgeLambdaVersion"}
    }
  }
}
